NODE_ENV=development
PORT=3000

# Database Configuration (if applicable)
MONGODB_URI=mongodb://localhost:27017/smoke_test_db

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security Configuration
JWT_SECRET=your_super_secret_long_random_string_here
JWT_EXPIRATION=1h

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=15 * 60 * 1000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Error Handling
ERROR_REPORTING_ENABLED=true

# Optional Feature Flags
FEATURE_USER_REGISTRATION=true
FEATURE_EMAIL_VERIFICATION=false

# External Service Credentials (if needed)
EXTERNAL_API_KEY=replace_with_actual_key
EXTERNAL_API_ENDPOINT=https://api.example.com/v1

# Development vs Production Toggles
DEBUG_MODE=false
VERBOSE_LOGGING=false
